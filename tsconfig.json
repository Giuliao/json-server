{
    "compilerOptions": {
      "target": "es2020",
      "module": "es2020",
      "allowJs": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "typeRoots": ["./node_modules/@types"],
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "lib": ["es2020"],
      "baseUrl": "./src",
      "rootDir": ".",
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "paths": {
        "@/public/*": ["public/*"] // matches "specific/path" and maps it to "some/specific/folder"
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }